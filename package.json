{
  "name": "arithmico",
  "version": "1.1.0",
  "description": "",
  "workspaces": [
    "./apps/*",
    "./libs/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.1"
  },
  "scripts": {
    "build:all": "npm run build:number-cruncher && npm run build:calculator && npm run build:documentation",
    "build:number-cruncher": "npm run build -w libs/number-cruncher",
    "build:calculator": "npm run build -w apps/calculator",
    "build:documentation": "npm run build -w apps/documentation",
    "test:number-cruncher": "npm run test -w libs/number-cruncher",
    "test:calculator": "npm run test -w apps/calculator",
    "test:documentation": "npm run test -w apps/documentation",
    "test:all": "npm run test:number-cruncher && npm run test:calculator && npm run test:documentation",
    "check:calculator": "eslint 'apps/calculator/src/**/*.{js,ts,tsx}' --fix --max-warnings 0",
    "check:documentation": "eslint 'apps/documentation/src/**/*.{js,ts,tsx}' --fix --max-warnings 0",
    "check:number-cruncher": "npm run type-check -w libs/number-cruncher",
    "check:all": "npm run check:calculator && npm run check:documentation && npm run check:number-cruncher"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/behrenle/arithmico-calculator.git"
  },
  "author": "Lennard Behrens",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/behrenle/arithmico-calculator/issues"
  },
  "homepage": "https://github.com/behrenle/arithmico-calculator#readme"
}
